<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id='library_return_wizard_form_view' model='ir.ui.view'>
        <field name='name'>library return wizard form view</field>
        <field name='model'>library.return.wizard</field>
        <field name='arch' type='xml'>
            <form string='Return Books'>
                <sheet>
                    <group>
                        <field name="borrower_id"/>
                    </group>
                    <group>
                        <field name="book_ids"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Return Books' name='books_returns' class='btn-primary' type='object'/>
                    <button string='Cancel' class='btn-default' special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="wizard_return_books_action" name="Return Books" res_model="library.return.wizard" view_mode="form" target="new" />
    <menuitem id="wizard_return_books_menu" parent="library_base_menu" action="wizard_return_books_action" sequence="20" />
</odoo>
